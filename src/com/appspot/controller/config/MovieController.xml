<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "/WEB-INF/classes/struts-2.1.7.dtd">
    
<struts>
    <package name="movie" namespace="/movie" extends="default">
       	<!-- Index -->
        <action name="index" method="index" class="movieController">
            <result name="success" type="tiles">movieIndex</result>
            <result name="error" type="tiles">movieIndex</result>
            <result name="input" type="tiles">movieIndex</result>
		</action>

        <!-- Edit -->
        <action name="edit" method="edit" class="movieController">
            <result name="success" type="tiles">movieEdit</result>
            <result name="successSave" type="redirectAction">
            	<param name="actionName">index</param>
                <param name="namespace">/movie</param>
                <param name="status">success</param>
            </result>
            <result name="notFound" type="redirectAction">
            	<param name="actionName">index</param>
                <param name="namespace">/movie</param>
                <param name="status">notFound</param>
            </result>
            <result name="error" type="tiles">movieEdit</result>
            <result name="input" type="tiles">movieEdit</result>
		</action>

        <!-- Add -->
        <action name="add" method="add" class="movieController">
            <result name="success" type="tiles">movieAdd</result>
            <result name="successSave" type="redirectAction">
            	<param name="actionName">index</param>
                <param name="namespace">/movie</param>
                <param name="status">success</param>
            </result>
            <result name="error" type="tiles">movieAdd</result>
            <result name="input" type="tiles">movieAdd</result>
		</action>

        <!-- Delete -->
        <action name="delete" method="delete" class="movieController">
        </action>
        
        <!-- generator:actions -->
    </package>
</struts>
