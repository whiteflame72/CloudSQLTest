    </filter>
    <filter-mapping>
        <filter-name>WebResourceOptimizer</filter-name>
        <url-pattern>/resources/*</url-pattern>
    </filter-mapping>
-->
    <!-- End: wro4j configuration -->

    <!-- Start: HTML Compressor -->
    <tablib>
        <taglib-uri>http://htmlcompressor.googlecode.com/taglib/compressor</taglib-uri>
        <taglib-location>/WEB-INF/htmlcompressor.tld</taglib-location>
    </tablib>
    <!-- End: HTML Compressor -->

    <!-- Start: Tiles Configuration -->
<!-- No longer needed, c.f. http://tiles.apache.org/framework/tutorial/configuration.html -->
    <context-param>
        <param-name>org.apache.tiles.impl.BasicTilesContainer.DEFINITIONS_CONFIG</param-name>
        <param-value>/WEB-INF/tiles.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.apache.struts2.tiles.StrutsTilesListener</listener-class>
    </listener>
	<listener>
        <listener-class>com.ociweb.gaestruts2.InitListener</listener-class> 
	</listener>
